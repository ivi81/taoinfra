# Название проекта (используется для префиксов контейнеров, сетей и т.д.)
COMPOSE_PROJECT_NAME=supabase

# -----------------------------------------------
# Конфигурация PostgreSQL
# -----------------------------------------------
POSTGRES_PASSWORD=your_strong_password_here
# Порт для подключения к PostgreSQL с хоста
POSTGRES_PORT=5432

# -----------------------------------------------
# Конфигурация Studio (веб-интерфейс)
# -----------------------------------------------
# Порт для Studio (веб-интерфейс управления)
STUDIO_PORT=3000
# Отключить Telemetry (рекомендуется для self-hosted)
DISABLE_TELEMETRY=true
# Включить опциональный мониторинг в Studio
ENABLE_MONITORING=false

# -----------------------------------------------
# Конфигурация аутентификации (Auth)
# -----------------------------------------------
# Секретный ключ JWT (минимум 32 символа)
JWT_SECRET=your_super_secret_jwt_key_here
# Время жизни access token (в секундах)
JWT_EXPIRY=3600
# Включить анонимные signup
ENABLE_ANONYMOUS_SIGNUPS=false

# -----------------------------------------------
# Конфигурация Storage
# -----------------------------------------------
# Регион для Storage (например, 'us-east-1')
STORAGE_REGION=us-east-1
# Размер файла для резервирования в Storage
STORAGE_FILE_SIZE_LIMIT=52428800

# -----------------------------------------------
# Конфигурация SMTP (для email уведомлений)
# -----------------------------------------------
# SMTP хост для отправки email (например, smtp.gmail.com)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SENDER_EMAIL=noreply@example.com
# Включить SSL для SMTP (true/false)
SMTP_SSL_ENABLED=false

# -----------------------------------------------
# Дополнительные настройки
# -----------------------------------------------
# Порт для API (Kong)
KONG_PORT=8000
# Порт для Inbucket (email тестирование)
INBUCKET_PORT=9000
# Режим разработки (влияет на логи и отладку)
ENVIRONMENT=production
# Секретный ключ для шифрования (для будущих функций)
ENCRYPTION_SECRET=your_encryption_secret_here
# URL вашего инстанса (для правильной работы ссылок в email)
SITE_URL=http://localhost:8000
ADDITIONAL_REDIRECT_URLS=